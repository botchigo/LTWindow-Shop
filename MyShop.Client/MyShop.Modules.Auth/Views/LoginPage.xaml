<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Modules.Auth.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:MyShop.Core.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F5A962" Offset="0.0"/>
                    <GradientStop Color="#9B6DD6" Offset="0.4"/>
                    <GradientStop Color="#7B5CD6" Offset="0.7"/>
                    <GradientStop Color="#6B4CD6" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Canvas>
                <Ellipse Width="600" Height="600" Canvas.Left="-200" Canvas.Top="100">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#8B6DD6" Offset="0.0"/>
                            <GradientStop Color="#7B5CD6" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Ellipse Width="400" Height="400" Canvas.Left="150" Canvas.Top="-100">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#E8A060" Offset="0.0"/>
                            <GradientStop Color="#C88B70" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Canvas>

            <TextBlock Text="▲" FontSize="32" Foreground="White" 
                       Margin="40,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                       FontWeight="Bold"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0">
                <TextBlock Text="Welcome" FontSize="52" Foreground="White" FontWeight="Bold" FontFamily="Segoe UI"/>
                <TextBlock Text="Back!" FontSize="52" Foreground="White" FontWeight="Bold" Margin="0,-10,0,0" FontFamily="Segoe UI"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Column="1" 
                      Background="White" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Padding="60" MinHeight="500">
                <StackPanel VerticalAlignment="Center" MaxWidth="350" HorizontalAlignment="Center">
                    
                    <TextBlock Text="Login" FontSize="36" FontWeight="Bold" 
                               Foreground="#1A1A2E" Margin="0,0,0,10" FontFamily="Segoe UI"/>
                    
                    <TextBlock Text="Welcome back! Please login to your account." 
                               FontSize="14" Foreground="#888888" Margin="0,0,0,30"
                               TextWrapping="Wrap" FontFamily="Segoe UI"/>

                    <TextBlock Text="User Name" FontSize="13" Foreground="#555555" Margin="0,0,0,8" FontFamily="Segoe UI"/>
                    
                    <TextBox x:Name="UsernameTextBox" 
                             Text="{x:Bind ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             PlaceholderText="username"
                             Background="White"
                             Foreground="Black"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"
                             CornerRadius="4"
                             Margin="0,0,0,20"
                             FontSize="14"
                             Height="40"
                             Padding="12,8"
                             FontFamily="Segoe UI"/>

                    <TextBlock Text="Password"                                
                               FontSize="13" 
                               Foreground="#555555" 
                               Margin="0,0,0,8" 
                               FontFamily="Segoe UI"/>
                    
                    <PasswordBox x:Name="PasswordTextBox"
                                 PlaceholderText="••••••••••"
                                 Background="White"
                                 Foreground="Black"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 CornerRadius="4"
                                 Margin="0,0,0,15"
                                 FontSize="14"
                                 Height="40"
                                 Padding="12,8"
                                 FontFamily="Segoe UI"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox x:Name="RememberMeCheckBox"
                                  Content="Remember Me" 
                                  Grid.Column="0" Foreground="#555555" FontSize="13" FontFamily="Segoe UI"/>
                        
                        <HyperlinkButton Content="Forgot Password?" Grid.Column="1"
                                         Foreground="#888888" FontSize="13" Padding="0" FontFamily="Segoe UI"/>
                    </Grid>

                    <Button x:Name="LoginButton"
                            Command="{x:Bind ViewModel.LoginCommand}"
                            IsEnabled="{x:Bind ViewModel.IsLoading, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"
                            Content="Login" 
                            HorizontalAlignment="Stretch"
                            Height="45"
                            FontSize="16"
                            FontWeight="SemiBold"
                            FontFamily="Segoe UI"   
                            Foreground="White"
                            CornerRadius="8"
                            Margin="0,0,0,15">
                        <Button.Background>
                            <SolidColorBrush Color="#7B5CD6"/>
                        </Button.Background>
                    </Button>

                    <ProgressRing x:Name="LoadingRing"
                                  IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                                  Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                  Width="40" Height="40"
                                  Margin="0,0,0,15"
                                  Foreground="#7B5CD6"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="New User? " FontSize="14" Foreground="#888888"
                                   VerticalAlignment="Center" FontFamily="Segoe UI"/>
                        <HyperlinkButton Content="Sign Up" 
                                         Command="{x:Bind ViewModel.GoToRegisterCommand}"
                                         Foreground="#7B5CD6" 
                                         FontSize="14" 
                                         Padding="0" 
                                         FontFamily="Segoe UI"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
