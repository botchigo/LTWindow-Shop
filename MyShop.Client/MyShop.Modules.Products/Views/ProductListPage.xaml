<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Modules.Products.Views.ProductListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:graphql="using:MyShop.Infrastructure"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">

    <Grid RowSpacing="12" Padding="24" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Quản lý sản phẩm" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16" Margin="0,0,0,12">
            <TextBox Header="Tìm kiếm" 
                     PlaceholderText="Tên sản phẩm..." 
                     Text="{x:Bind ViewModel.Keyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Width="240" VerticalAlignment="Bottom"/>

            <ComboBox Header="Loại sản phẩm"
                      ItemsSource="{x:Bind ViewModel.Categories}"
                      SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                      DisplayMemberPath="Name"
                      Width="180" VerticalAlignment="Bottom"
                      PlaceholderText="Tất cả"/>

            <Button Command="{x:Bind ViewModel.GoToCategryManagementCommand}"
                    ToolTipService.ToolTip="Quản lý danh mục"
                    VerticalAlignment="Bottom">
                <FontIcon Glyph="&#xE713;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="16"/>
            </Button>

            <NumberBox Header="Giá từ" 
           Value="{x:Bind ViewModel.MinPrice, Mode=TwoWay, Converter={StaticResource DecimalToDoubleConverter}}" 
           SpinButtonPlacementMode="Compact" 
           SmallChange="10000" 
           LargeChange="100000"
           Width="120" VerticalAlignment="Bottom"/>

            <NumberBox Header="Giá đến" 
           Value="{x:Bind ViewModel.MaxPrice, Mode=TwoWay, Converter={StaticResource DecimalToDoubleConverter}}"
           SpinButtonPlacementMode="Compact" 
           SmallChange="10000"
           LargeChange="100000"
           Width="120" VerticalAlignment="Bottom"/>

            <Button Command="{x:Bind ViewModel.SearchCommand}" 
                    Style="{StaticResource AccentButtonStyle}"
                    VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Find"/>
                    <TextBlock Text="Tìm"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE8CB;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="16" 
                          VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                <ComboBox ItemsSource="{x:Bind ViewModel.SortFields}"
                          SelectedItem="{x:Bind ViewModel.SelectedSortCriteria, Mode=TwoWay}"
                          Header="Sắp xếp theo"
                          Width="140">
                </ComboBox>

                <ComboBox ItemsSource="{x:Bind ViewModel.SortDirections}"
                          SelectedItem="{x:Bind ViewModel.SelectedSortDirection, Mode=TwoWay}"
                          Header="Thứ tự"
                          Width="140"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">

                <Button Background="Transparent" BorderThickness="0" Padding="8"
                            ToolTipService.ToolTip="Xem cấu trúc file mẫu">
                    <FontIcon Glyph="&#xE946;" FontSize="16" Foreground="{ThemeResource AccentFillColorDefaultBrush}" FontFamily="{StaticResource SymbolThemeFontFamily}"/>

                    <Button.Flyout>
                        <Flyout Placement="BottomEdgeAlignedRight">
                            <StackPanel Spacing="12" MaxWidth="350">
                                <TextBlock Text="Hướng dẫn Import dữ liệu" Style="{StaticResource SubtitleTextBlockStyle}"/>

                                <RichTextBlock TextWrapping="Wrap">
                                    <Paragraph>
                                        Hỗ trợ file
                                        <Bold>Excel (.xlsx)</Bold> và
                                        <Bold>Access (.accdb)</Bold> .
                                    </Paragraph>
                                </RichTextBlock>

                                <InfoBar Severity="Informational" IsOpen="True" IsClosable="False" 
                                            Title="Lưu ý Access" 
                                            Message="Tên bảng trong Access bắt buộc phải là 'Products'." />

                                <TextBlock Text="Cấu trúc cột bắt buộc:" FontWeight="SemiBold"/>

                                <Grid ColumnSpacing="12" RowSpacing="4" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="1" Padding="8" CornerRadius="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text=": Tên sản phẩm"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="ImportPrice" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text=": Giá nhập (Số)"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="SalePrice" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text=": Giá bán (Số)"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Stock" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text=": Số lượng tồn kho"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Description" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text=": Mô tả chi tiết"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Category" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text=": Tên loại sản phẩm"/>
                                </Grid>

                                <TextBlock Text="* Tên cột phải viết chính xác (không dấu, viết liền)." FontSize="12" FontStyle="Italic" Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>

                <Button Command="{x:Bind ViewModel.ImportProductsCommand}"
                        ToolTipService.ToolTip="Nhập từ Excel/Access"
                        Style="{StaticResource AccentButtonStyle}" 
                        Background="Green">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8B6;" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
                        <TextBlock Text="Import"/>
                    </StackPanel>
                </Button>

                <Button Command="{x:Bind ViewModel.GoToCreateCommand}" 
                        Style="{StaticResource AccentButtonStyle}"
                        ToolTipService.ToolTip="Tạo sản phẩm mới">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Add"/>
                        <TextBlock Text="Thêm mới"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="3" Padding="0,0,12,0">
            <GridView ItemsSource="{x:Bind ViewModel.Products, Mode=OneWay}"
                      SelectionMode="None"
                      IsItemClickEnabled="True"
                      ItemClick="OnItemClick">

                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Left"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="graphql:IGetProductList_Products_Items">
                        <Grid Width="160" Height="240" 
                              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                              CornerRadius="8" BorderThickness="1" 
                              BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                              Padding="0">

                            <Grid.Shadow>
                                <ThemeShadow/>
                            </Grid.Shadow>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="140"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" CornerRadius="8,8,0,0">
                                <Image Source="{x:Bind ProductImages, Converter={StaticResource ProductThumbnailConverter}}" 
                                       Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4"/>
                            </Grid>

                            <StackPanel Grid.Row="1" Padding="12">
                                <TextBlock Text="{x:Bind Name}" 
                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                           FontSize="13" MaxLines="2" TextTrimming="CharacterEllipsis"
                                           ToolTipService.ToolTip="{x:Bind Name}"/>

                                <TextBlock Text="{x:Bind SalePrice, Converter={StaticResource CurrencyConverter}}" 
                                           Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                           FontWeight="Bold" Margin="0,4,0,0"/>

                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </ScrollViewer>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="24" Margin="0,12,0,0">
            <Button Command="{x:Bind ViewModel.LoadPreviousPageCommand}" Content="&#xE76B;" FontFamily="{StaticResource SymbolThemeFontFamily}"/>

            <TextBlock VerticalAlignment="Center">
                <Run Text="Trang" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <Run Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" FontWeight="SemiBold"/>
                <Run Text="/" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <Run Text="{x:Bind ViewModel.TotalPage, Mode=OneWay}"/>
            </TextBlock>

            <Button Command="{x:Bind ViewModel.LoadNextPageCommand}" Content="&#xE76C;" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
        </StackPanel>

        <Grid Grid.Row="0" Grid.RowSpan="5" 
              Background="{ThemeResource SystemControlPageBackgroundBaseLowBrush}" Opacity="0.8"
              Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressRing IsActive="True" Width="60" Height="60"/>
        </Grid>

    </Grid>
</Page>
