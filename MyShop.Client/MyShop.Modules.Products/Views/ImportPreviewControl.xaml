<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Modules.Products.Views.ImportPreviewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:dtos="using:MyShop.Core.DTOs"
    mc:Ignorable="d">

    <Grid RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Xem trước dữ liệu import" Style="{StaticResource TitleTextBlockStyle}"/>

        <ListView Grid.Row="1" 
                  ItemsSource="{x:Bind ProductsImported}" 
                  BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" 
                  BorderThickness="1" 
                  CornerRadius="4"
                  SelectionMode="None"
                  MaxHeight="500"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Enabled">

            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Padding="12" ColumnSpacing="16" MinWidth="1000" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Tên sản phẩm" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="Giá nhập" FontWeight="Bold" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="2" Text="Giá bán" FontWeight="Bold" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="Tồn" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Loại" FontWeight="Bold"/>
                        <TextBlock Grid.Column="5" Text="Mô tả" FontWeight="Bold"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="dtos:ProductImportDto">
                    <Grid Padding="12" ColumnSpacing="16" MinWidth="1000" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{x:Bind Name}" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{x:Bind Name}"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ImportPrice}" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="2" Text="{x:Bind SalePrice}" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="{x:Bind Stock}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="{x:Bind CategoryName}" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Grid.Column="5" Text="{x:Bind Description}" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</UserControl>
