<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Modules.Orders.Views.OrderDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.Modules.Orders.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:graphql="using:MyShop.Infrastructure"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Padding="24,24,24,12">
            <Button Command="{x:Bind ViewModel.GoBackCommand}" Style="{StaticResource NavigationBackButtonNormalStyle}"/>
            <StackPanel>
                <TextBlock Style="{StaticResource TitleTextBlockStyle}">
                    <Run Text="Đơn hàng #"/>
                    <Run Text="{x:Bind ViewModel.Order.Id, Mode=OneWay, FallbackValue='...'}"/>
                </TextBlock>
                <TextBlock Text="{x:Bind ViewModel.Order.CreatedAt, Converter={StaticResource DateTimeConverter}, Mode=OneWay}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Padding="24,0,24,24">
            <Grid ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="16">
                    <TextBlock Text="Danh sách sản phẩm" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <ListView ItemsSource="{x:Bind ViewModel.Order.OrderItems, Mode=OneWay}" SelectionMode="None"
                              BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" CornerRadius="8">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="graphql:IGetOrderById_OrderById_OrderItems">
                                <Grid Padding="12" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{x:Bind Product.ProductImages, Converter={StaticResource ProductThumbnailConverter}}" Width="40" Height="40"/>

                                    <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Product.Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{x:Bind UnitSalePrice, Converter={StaticResource CurrencyConverter}}" Foreground="Gray" FontSize="12"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Run Text="x"/> <Run Text="{x:Bind Quantity}"/>
                                    </TextBlock>

                                    <TextBlock Grid.Column="3" Text="{x:Bind TotalPrice, Converter={StaticResource CurrencyConverter}}" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <StackPanel Grid.Column="1" Spacing="24">

                    <StackPanel Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="16" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" Spacing="12">
                        <TextBlock Text="Cập nhật trạng thái" FontWeight="Bold"/>
                        <ComboBox ItemsSource="{x:Bind ViewModel.Statuses}" 
                                  SelectedItem="{x:Bind ViewModel.SelectedOrderStatus, Mode=TwoWay}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToStringConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button Content="Lưu thay đổi" Command="{x:Bind ViewModel.UpdateStatusCommand}" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Stretch"/>

                        <Button Content="Xóa đơn hàng" Command="{x:Bind ViewModel.DeleteOrderCommand}" 
                                Background="Transparent" Foreground="Red" HorizontalAlignment="Stretch" Margin="0,8,0,0"/>
                    </StackPanel>

                    <StackPanel Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="16" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" Spacing="8">
                        <Grid>
                            <TextBlock Text="TỔNG THANH TOÁN" FontWeight="Bold"/>
                            <TextBlock Text="{x:Bind ViewModel.Order.FinalPrice, Converter={StaticResource CurrencyConverter}, Mode=OneWay}" 
                                       FontWeight="Bold" Foreground="{ThemeResource SystemFillColorSuccessBrush}" HorizontalAlignment="Right" FontSize="16"/>
                        </Grid>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Grid Grid.RowSpan="2" Background="#80000000" Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressRing IsActive="True"/>
        </Grid>
    </Grid>
</Page>
