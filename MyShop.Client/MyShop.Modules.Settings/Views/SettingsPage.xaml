<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Modules.Settings.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.Modules.Settings.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="20" Padding="20">
        <TextBlock Text="Cài đặt hệ thống" Style="{StaticResource TitleTextBlockStyle}"/>

        <StackPanel Spacing="8">
            <TextBlock Text="Số lượng sản phẩm mỗi trang" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ComboBox ItemsSource="{x:Bind ViewModel.PageSizeOptions}"
                      SelectedItem="{x:Bind ViewModel.SelectedPageSize, Mode=TwoWay}"
                      Width="150"
                      Header="Chọn số lượng:"/>
            <TextBlock Text="Thay đổi sẽ có hiệu lực ở lần tải dữ liệu tiếp theo." 
                       Foreground="Gray" FontSize="12"/>
        </StackPanel>

        <MenuFlyoutSeparator/>

        <StackPanel Spacing="8">
            <TextBlock Text="Khởi động ứng dụng" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <ToggleSwitch Header="Mở lại màn hình làm việc cuối cùng"
                          IsOn="{x:Bind ViewModel.IsRememberLastPage, Mode=TwoWay}"
                          OnContent="Đã bật"
                          OffContent="Đã tắt"/>
            <TextBlock Text="Nếu tắt, ứng dụng sẽ luôn khởi động vào Dashboard." 
                       Foreground="Gray" FontSize="12"/>
        </StackPanel>
    </StackPanel>
</Page>
