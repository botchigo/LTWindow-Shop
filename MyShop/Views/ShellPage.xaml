<Page
    x:Class="MyShop.Pages.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#1A1A2E">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,20,0,30">
                    <Grid Padding="15,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Click="ToggleSidebar_Click" Background="Transparent" BorderThickness="0" Padding="5" Foreground="White">
                            <FontIcon Glyph="&#xE700;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="18"/>
                        </Button>

                        <StackPanel x:Name="AppTitlePanel" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="ðŸª MYSHOP" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Management" FontSize="11" Foreground="#888888"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="1" Spacing="5">
                    <TextBlock x:Name="MenuLabel" Text="MAIN MENU" FontSize="11" Foreground="#666666" Margin="20,0,0,10"/>

                    <Border x:Name="NavDashboard" Tag="Dashboard" 
                            PointerPressed="Nav_PointerPressed" 
                            Background="#7B5CD6" CornerRadius="8" Margin="10,0" Padding="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ“Š" FontSize="18" Width="24" TextAlignment="Center"/>
                            <TextBlock x:Name="LblDashboard" Text="Dashboard" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border x:Name="NavProducts" Tag="Products" 
                            PointerPressed="Nav_PointerPressed"
                            Background="Transparent" CornerRadius="8" Margin="10,0" Padding="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ“¦" FontSize="18" Width="24" TextAlignment="Center"/>
                            <TextBlock x:Name="LblProducts" Text="Products" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border x:Name="NavOrders" Tag="Orders" 
                            PointerPressed="Nav_PointerPressed"
                            Background="Transparent" CornerRadius="8" Margin="10,0" Padding="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ›’" FontSize="18" Width="24" TextAlignment="Center"/>
                            <TextBlock x:Name="LblOrders" Text="Orders" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border x:Name="NavSettings" Tag="Settings" 
                            PointerPressed="Nav_PointerPressed"
                            Background="Transparent" CornerRadius="8" Margin="10,0" Padding="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="âš™ï¸" FontSize="18" Width="24" TextAlignment="Center"/>
                            <TextBlock x:Name="LblSettings" Text="Settings" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border x:Name="NavReports" Tag="Reports" 
                            PointerPressed="Nav_PointerPressed"
                            Background="Transparent" CornerRadius="8" Margin="10,0" Padding="15,12">        
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ“Š" FontSize="18"/>
                            <TextBlock Text="Reports" Foreground="#AAAAAA" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Border Grid.Row="2" Background="Transparent" CornerRadius="8" Margin="10,0,10,30" Padding="12">
                    <HyperlinkButton HorizontalAlignment="Stretch" Click="LogoutButton_Click" Padding="0">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸšª" FontSize="18" Width="24" TextAlignment="Center"/>
                            <TextBlock x:Name="LblLogout" Text="Log Out" Foreground="#FF6B6B" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                    </HyperlinkButton>
                </Border>
            </Grid>
        </Border>

        <Frame x:Name="AppFrame" Grid.Column="1" Background="White"/>
    </Grid>
</Page>