<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Views.CreateOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:models="using:Database.models"
    xmlns:vm="using:MyShop.ViewModels" 
    xmlns:models1="using:Database.Enums"
    mc:Ignorable="d">

    <Grid ColumnSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Padding="24,16,24,0" RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Command="{x:Bind ViewModel.GobackCommand}" 
                        Style="{StaticResource SubtleButtonStyle}" Padding="10">
                    <FontIcon Glyph="&#xE72B;" FontSize="16"/>
                </Button>

                <TextBox Grid.Column="1" PlaceholderText="Tìm kiếm sản phẩm (Tên, Mã, Giá)..." 
                         Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         CornerRadius="20" BorderThickness="0" Background="{ThemeResource LayerFillColorAltBrush}"
                         Height="40" VerticalContentAlignment="Center">
                    <TextBox.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Enter" Modifiers="None"/>
                    </TextBox.KeyboardAccelerators>
                    <TextBox.ContextFlyout>
                        <MenuFlyout/>
                    </TextBox.ContextFlyout>
                </TextBox>

                <Button Grid.Column="2" Command="{x:Bind ViewModel.SearchCommand}" Style="{StaticResource AccentButtonStyle}" CornerRadius="20" Width="40" Height="40">
                    <FontIcon Glyph="&#xE721;" FontSize="16"/>
                </Button>
            </Grid>

            <GridView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Products}"
          SelectionMode="None" 
          IsItemClickEnabled="True"
          ItemClick="OnProductClicked"
          Padding="0,16,0,24">

                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="0,0,16,16"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="CornerRadius" Value="8"/>
                        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridViewItem">
                                    <ListViewItemPresenter 
                        ContentTransitions="{TemplateBinding ContentTransitions}"
                        Control.IsTemplateFocusTarget="True"
                        
                        SelectionCheckMarkVisualEnabled="False"
                        CheckMode="Overlay"
                        
                        PointerOverBackground="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        SelectedBackground="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        SelectedPointerOverBackground="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        PressedBackground="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        
                        RevealBorderThickness="2"
                        RevealBorderBrush="{ThemeResource SystemAccentColor}"
                        CornerRadius="8"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GridView.ItemContainerStyle>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Grid Width="160" Height="240" CornerRadius="8"
                              BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="1"
                              Translation="0,0,8">

                            <Grid.Shadow>
                                <ThemeShadow/>
                            </Grid.Shadow>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="140"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" CornerRadius="8,8,0,0" Background="White">
                                <Image Source="{x:Bind ProductImages, Converter={StaticResource ProductThumbnailConverter}, Mode=OneWay}" 
                           Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8"/>
                            </Grid>

                            <StackPanel Grid.Row="1" Padding="12">
                                <TextBlock Text="{x:Bind Name}" 
                               TextTrimming="CharacterEllipsis" MaxLines="2" Height="40" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               ToolTipService.ToolTip="{x:Bind Name}"/>

                                <Grid Margin="0,8,0,0">
                                    <StackPanel>
                                        <TextBlock Text="{x:Bind SalePrice, Converter={StaticResource CurrencyConverter}}" 
                                       Foreground="{ThemeResource SystemFillColorSuccessBrush}" 
                                       FontWeight="Bold" FontSize="15"/>
                                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="11">
                                <Run Text="Kho:"/> <Run Text="{x:Bind Stock}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <FontIcon Glyph="&#xE710;" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                  Foreground="{ThemeResource AccentFillColorDefaultBrush}" FontSize="16"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

        <Grid Grid.Column="1" Background="{ThemeResource LayerFillColorDefaultBrush}" 
              BorderThickness="1,0,0,0" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Padding="20,24,20,12">
                <TextBlock Text="Đơn hàng hiện tại" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="4">
                    <TextBlock Text="{x:Bind ViewModel.Carts.Count, Mode=OneWay}" FontWeight="Bold" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                    <TextBlock Text="món" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
            <MenuFlyoutSeparator VerticalAlignment="Bottom" Margin="0"/>

            <ListView x:Name="CartList" Grid.Row="1" ItemsSource="{x:Bind ViewModel.Carts}" 
                      SelectionMode="None" Padding="12">
                <ListView.ItemContainerTransitions>
                    <TransitionCollection>
                        <AddDeleteThemeTransition/>
                    </TransitionCollection>
                </ListView.ItemContainerTransitions>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="vm:CartItemViewModel">
                        <Grid Padding="8,12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                              CornerRadius="4" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Spacing="4">
                                <TextBlock Text="{x:Bind Product.Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{x:Bind Price, Converter={StaticResource CurrencyConverter}}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" Spacing="8">
                                <TextBlock Text="{x:Bind Subtotal, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                           FontWeight="Bold" HorizontalAlignment="Right"/>

                                <StackPanel Orientation="Horizontal" Spacing="0" 
                                            Background="{ThemeResource LayerFillColorAltBrush}" CornerRadius="16" BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
                                    <Button Content="-" Command="{Binding ElementName=CartList, Path=DataContext.DecreaseQuantityCommand}" CommandParameter="{x:Bind}"
                                            Style="{StaticResource DateTimePickerFlyoutButtonStyle}" Padding="0" Width="32" Height="32" CornerRadius="16,0,0,16"/>

                                    <TextBlock Text="{x:Bind Quantity, Mode=OneWay}" Width="24" VerticalAlignment="Center" TextAlignment="Center" FontWeight="SemiBold"/>

                                    <Button Content="+" Command="{Binding ElementName=CartList, Path=DataContext.IncreaseQuantityCommand}" CommandParameter="{x:Bind}"
                                            Style="{StaticResource DateTimePickerFlyoutButtonStyle}" Padding="0" Width="32" Height="32" CornerRadius="0,16,16,0"/>
                                </StackPanel>
                            </StackPanel>

                            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-8,-8,0"
                                    Command="{Binding ElementName=CartList, Path=DataContext.RemoveFromCartCommand}" CommandParameter="{x:Bind}"
                                    Style="{StaticResource SubtleButtonStyle}" Width="24" Height="24" Padding="0">
                                <FontIcon Glyph="&#xE711;" FontSize="10"/>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="2" Background="{ThemeResource LayerFillColorAltBrush}" 
                  BorderThickness="0,1,0,0" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                  Translation="0,0,32">
                <Grid.Shadow>
                    <ThemeShadow/>
                </Grid.Shadow>
                <StackPanel Padding="20" Spacing="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Phương thức thanh toán" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <ComboBox HorizontalAlignment="Stretch" SelectedItem="{x:Bind ViewModel.SelectedPaymentMethod, Mode=TwoWay}"
                                  ItemsSource="{x:Bind ViewModel.PaymentMethods}" CornerRadius="4">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="models1:PaymentMethod">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8C7;" FontSize="14" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                        <TextBlock Text="{x:Bind Converter={StaticResource EnumConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <MenuFlyoutSeparator/>

                    <Grid>
                        <TextBlock Text="Tổng thanh toán" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="{x:Bind ViewModel.TotalAmount, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                   HorizontalAlignment="Right" Style="{StaticResource TitleTextBlockStyle}" FontWeight="Bold" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                    </Grid>

                    <Button HorizontalAlignment="Stretch" Height="48" CornerRadius="24"
                            Command="{x:Bind ViewModel.CheckoutCommand}" 
                            Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="THANH TOÁN" FontWeight="Bold" CharacterSpacing="100"/>
                            <FontIcon Glyph="&#xE156;" FontSize="16"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
