<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Pages.ProductManagementPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls" xmlns:models="using:Database.models"
    mc:Ignorable="d">

    <Grid RowSpacing="12" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Quản lý sản phẩm" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16">
            <TextBox Header="Tìm kiếm" 
                 PlaceholderText="Tên sản phẩm..." 
                 Text="{x:Bind ViewModel.Keyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Width="240"
                 VerticalAlignment="Bottom"/>

            <ComboBox Header="Loại sản phẩm"
                  ItemsSource="{x:Bind ViewModel.Categories}"
                  SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                  DisplayMemberPath="Name"
                  Width="180"
                  VerticalAlignment="Bottom"/>

            <NumberBox Header="Giá từ" 
               Value="{x:Bind ViewModel.MinPrice, Mode=TwoWay, Converter={StaticResource DecimalToDoubleConverter}}" 
               SpinButtonPlacementMode="Compact"
               Width="140"
               VerticalAlignment="Bottom"/>

            <NumberBox Header="Giá đến" 
               Value="{x:Bind ViewModel.MaxPrice, Mode=TwoWay, Converter={StaticResource DecimalToDoubleConverter}}"
               SpinButtonPlacementMode="Compact" 
               Width="140"
               VerticalAlignment="Bottom"/>

            <Button Command="{x:Bind ViewModel.ReloadDataCommand}" 
                Style="{StaticResource AccentButtonStyle}"
                VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Find"/>
                    <TextBlock Text="Tìm"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE8CB;" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="16" ToolTipService.ToolTip="Sắp xếp"/>
                <ComboBox ItemsSource="{x:Bind ViewModel.SortCriterias}"
                      SelectedItem="{x:Bind ViewModel.SelectedSortCriteria, Mode=TwoWay}"
                      PlaceholderText="Tiêu chí"
                      Width="140"/>
                <ComboBox ItemsSource="{x:Bind ViewModel.SortDirections}"
                      SelectedItem="{x:Bind ViewModel.SelectedSortDirection, Mode=TwoWay}"
                      PlaceholderText="Thứ tự"
                      Width="120"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                <!--<Button Command="{x:Bind ViewModel.ImportCommand}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8B6;" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
                    <TextBlock Text="Import Excel"/>
                </StackPanel>
            </Button>-->

                <Button Command="{x:Bind ViewModel.CreateProductCommand}" Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Add"/>
                        <TextBlock Text="Thêm mới"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="3" Padding="0,0,10,0">
            <GridView ItemsSource="{x:Bind ViewModel.FilteredProducts, Mode=OneWay}"
              SelectionMode="None"
              IsItemClickEnabled="True"
              ItemClick="OnItemClick">

                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Left"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="8"/>
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </GridView.ItemContainerStyle>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Grid Width="145" Height="220" 
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      Translation="0,0,8"       
                      CornerRadius="8"
                      BorderThickness="1" 
                      BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">

                            <Grid.Shadow>
                                <ThemeShadow/>
                            </Grid.Shadow>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="95"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Background="#F8F8F8" CornerRadius="8,8,0,0" Padding="4">
                                <Image Source="{x:Bind Converter={StaticResource ProductThumbnailConverter}}" 
                               Stretch="Uniform"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            </Grid>

                            <StackPanel Grid.Row="1" Padding="12,8,12,0" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind Name}" 
                                   Style="{StaticResource SubtitleTextBlockStyle}" 
                                   FontSize="12" MaxLines="2" TextTrimming="CharacterEllipsis"
                                   ToolTipService.ToolTip="{x:Bind Name}"
                                   HorizontalAlignment="Center" TextAlignment="Center"/>
                                <TextBlock Text="{x:Bind SalePrice, Converter={StaticResource StringFormatConverter}, ConverterParameter='N0'}" 
                                   Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                   FontWeight="Bold" FontSize="13" Margin="0,4,0,0"
                                   HorizontalAlignment="Center">
                             <Run Text=" đ"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Spacing="16" Padding="0,0,0,12">

                                <Button Click="OnEditClick"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Width="28" Height="28" Padding="0"
                                        CornerRadius="14"
                                        ToolTipService.ToolTip="Sửa sản phẩm">
                                    <FontIcon Glyph="&#xE70F;" FontSize="12" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
                                </Button>

                                <Button Click="OnDeleteClick"
                                        Background="Transparent" BorderThickness="1"
                                        Width="28" Height="28" Padding="0"
                                        CornerRadius="14"
                                        BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                                        Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                        ToolTipService.ToolTip="Xóa sản phẩm">
                                    <FontIcon Glyph="&#xE74D;" FontSize="12" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </ScrollViewer>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="24" Margin="0,12,0,0">
            <Button Command="{x:Bind ViewModel.LoadPreviousPageCommand}" Content="&#xE76B;" FontFamily="{StaticResource SymbolThemeFontFamily}" ToolTipService.ToolTip="Trang trước"/>

            <TextBlock VerticalAlignment="Center">
            <Run Text="Trang" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Run Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" FontWeight="SemiBold"/>
            <Run Text="/" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Run Text="{x:Bind ViewModel.TotalPage, Mode=OneWay}"/>
            </TextBlock>

            <Button Command="{x:Bind ViewModel.LoadNextPageCommand}" Content="&#xE76C;" FontFamily="{StaticResource SymbolThemeFontFamily}" ToolTipService.ToolTip="Trang sau"/>
        </StackPanel>

        <Grid Grid.Row="0" Grid.RowSpan="5" 
          Background="{ThemeResource SystemControlPageBackgroundBaseLowBrush}" Opacity="0.7"
          Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
            <ProgressRing IsActive="True" Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</Page>
