<UserControl
    x:Class="MyShop.Dialogs.ProductDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Database.models"
    xmlns:converters="using:MyShop.Converters"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="0,16,0,16" 
              BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" 
              BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <FontIcon Glyph="{x:Bind ViewModel.Product.Category.Name, Converter={StaticResource CategoryToIconConverter}, Mode=OneWay}"
                          FontSize="20" 
                          Foreground="{ThemeResource AccentFillColorDefaultBrush}" 
                          FontFamily="{StaticResource SymbolThemeFontFamily}"/>

                <TextBlock Text="{x:Bind ViewModel.Product.Name}" 
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

            <FlipView ItemsSource="{x:Bind ViewModel.Product.ProductImages, Mode=OneWay}"
                      MaxHeight="200">
                <FlipView.ItemTemplate>
                    <DataTemplate x:DataType="models:ProductImage">
                        <Grid>
                            <Image Source="{x:Bind Path, Converter={StaticResource PathToImageConverter}}" 
                                   Stretch="Uniform" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </FlipView.ItemTemplate>
            </FlipView>
        </Grid>

        <ScrollViewer Grid.Row="2" Padding="24" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">

                <StackPanel HorizontalAlignment="Center" Spacing="4">
                    <TextBlock Text="{x:Bind ViewModel.Product.SalePrice, Converter={StaticResource CurrencyConverter}}" 
                               Style="{StaticResource TitleTextBlockStyle}"
                               FontSize="28" FontWeight="ExtraBold"
                               Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                               HorizontalAlignment="Center"/>

                    <Border Background="{ThemeResource SystemControlBackgroundChromeBlackMediumLowBrush}"
                            CornerRadius="10" Padding="12,4" HorizontalAlignment="Center">
                        <TextBlock Text="{x:Bind ViewModel.Product.Category.Name}" 
                                   FontSize="12" Foreground="White"/>
                    </Border>
                </StackPanel>

                <MenuFlyoutSeparator/>

                <Grid RowSpacing="12" ColumnSpacing="16" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <FontIcon Grid.Row="0" Grid.Column="0" Glyph="&#xE8D1;" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Giá nhập kho:" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{x:Bind ViewModel.Product.ImportPrice, Converter={StaticResource CurrencyConverter}}" FontWeight="SemiBold"/>

                    <FontIcon Grid.Row="1" Grid.Column="0" Glyph="&#xE7BF;" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Đã bán:" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="{x:Bind ViewModel.Product.Count}" FontWeight="Bold"/>
                        <TextBlock Text="sản phẩm" FontSize="12" VerticalAlignment="Bottom" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <FontIcon Grid.Row="2" Grid.Column="0" Glyph="&#xE787;" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="Ngày tạo:" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{x:Bind ViewModel.Product.CreatedAt, Converter={StaticResource DateTimeConverter}}"/>

                    <FontIcon Grid.Row="3" Grid.Column="0" Glyph="&#xE777;" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="Cập nhật:" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="{x:Bind ViewModel.Product.UpdatedAt, Converter={StaticResource DateTimeConverter}}"/>
                </Grid>

                <StackPanel Spacing="8">
                    <TextBlock Text="Mô tả" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                            BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                            CornerRadius="8" Padding="12">
                        <TextBlock Text="{x:Bind ViewModel.Product.Description}" TextWrapping="Wrap" Style="{StaticResource BodyTextBlockStyle}"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="3" Padding="0,10,0,24">
            <Button Content="Đóng" 
                Click="CloseButton_Click"
                HorizontalAlignment="Center" 
                Width="150"
                Style="{StaticResource AccentButtonStyle}"/>
        </Grid>
    </Grid>
</UserControl>