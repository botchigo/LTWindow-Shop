<ContentDialog
    x:Class="MyShop.Dialogs.OrderDetailsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Database.models"
    mc:Ignorable="d"
    PrimaryButtonText="Cập nhật"
    CloseButtonText="Đóng"
    DefaultButton="Primary"
    Style="{StaticResource DefaultContentDialogStyle}">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">2000</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">2000</x:Double>
    </ContentDialog.Resources>

    <ContentDialog.TitleTemplate>
        <DataTemplate>
            <Grid ColumnSpacing="12" Padding="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="8" Width="40" Height="40">
                    <FontIcon Glyph="&#xE9D2;" FontFamily="{StaticResource SymbolThemeFontFamily}" Foreground="White" FontSize="20"/>
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Chi tiết đơn hàng" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="Mã đơn: #"/>
                        <Run Text="Xem và cập nhật trạng thái"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </ContentDialog.TitleTemplate>

    <Grid MinWidth="600" RowSpacing="20" Padding="0,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid ColumnSpacing="24" Padding="16" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Spacing="4">
                <TextBlock Text="MÃ ĐƠN HÀNG" FontSize="10" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="{x:Bind ViewModel.Order.Id}" Style="{StaticResource BodyStrongTextBlockStyle}" FontSize="16"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="4" HorizontalAlignment="Right">
                <TextBlock Text="NGÀY TẠO" FontSize="10" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right"/>
                <TextBlock Text="{x:Bind ViewModel.Order.CreatedAt, Converter={StaticResource DateTimeConverter}}" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>

        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Order.OrderItems}" 
                  MaxHeight="350" SelectionMode="None">

            <ListView.Header>
                <Grid Padding="12" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="110"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="SẢN PHẨM" FontSize="12" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Grid.Column="2" Text="SL" FontSize="12" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="ĐƠN GIÁ" FontSize="12" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="4" Text="THÀNH TIỀN" FontSize="12" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right"/>
                </Grid>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:OrderItem">
                    <Grid Padding="0,12" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="110"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="48" Height="48" CornerRadius="4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
                            <Image Source="{x:Bind Product.ProductImages, Converter={StaticResource ProductThumbnailConverter}}" 
                                   Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Padding="12,0,0,0">
                            <TextBlock Text="{x:Bind Product.Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" MaxLines="2"/>
                            <TextBlock Text="{x:Bind Product.Category.Name}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <Border Grid.Column="2" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="12" Height="24" Width="40" HorizontalAlignment="Center">
                            <TextBlock Text="{x:Bind Quantity}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </Border>

                        <TextBlock Grid.Column="3" Text="{x:Bind UnitSalePrice, Converter={StaticResource CurrencyConverter}}" 
                                   VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                        <TextBlock Grid.Column="4" Text="{x:Bind TotalPrice, Converter={StaticResource CurrencyConverter}}" 
                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid Grid.Row="2" ColumnSpacing="24" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="16" CornerRadius="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Spacing="4">
                <TextBlock Text="CẬP NHẬT TRẠNG THÁI" FontSize="10" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <ComboBox HorizontalAlignment="Stretch"
                          ItemsSource="{x:Bind ViewModel.OrderStatuses}"
                          SelectedItem="{x:Bind ViewModel.SelectedOrderStatus, Mode=TwoWay}"
                          PlaceholderText="Chọn trạng thái..."/>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Spacing="2">
                <TextBlock Text="TỔNG THANH TOÁN" FontSize="10" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right"/>
                <TextBlock Text="{x:Bind ViewModel.Order.FinalPrice, Converter={StaticResource CurrencyConverter}}" 
                           Style="{StaticResource TitleTextBlockStyle}" 
                           Foreground="{ThemeResource SystemFillColorSuccessBrush}" 
                           HorizontalAlignment="Right">
                     <Run Text=" đ" FontSize="20" FontWeight="Normal"/>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</ContentDialog>