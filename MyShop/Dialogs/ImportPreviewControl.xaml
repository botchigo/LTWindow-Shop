<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Dialogs.ImportPreviewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:models="using:Database.models"
    mc:Ignorable="d">

    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Xem trước dữ liệu import" Style="{StaticResource TitleTextBlockStyle}"/>

        <ListView Grid.Row="1" 
          ItemsSource="{x:Bind ProductsImported}" 
          BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" 
          BorderThickness="1" 
          CornerRadius="4"
          SelectionMode="None" 
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.HorizontalScrollMode="Enabled">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="MinHeight" Value="0"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Padding="12" ColumnSpacing="16" MinWidth="850"
                  Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Tên sản phẩm" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="SKU" FontWeight="Bold"/>
                        <TextBlock Grid.Column="2" Text="Giá nhập" FontWeight="Bold" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="Giá bán" FontWeight="Bold" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="4" Text="Tồn" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="Mô tả" FontWeight="Bold"/>
                        <TextBlock Grid.Column="6" Text="Loại" FontWeight="Bold"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <Grid Padding="12" ColumnSpacing="16" MinWidth="850">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{x:Bind Name}" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{x:Bind Name}"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind Sku}" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Grid.Column="2" Text="{x:Bind ImportPrice}" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="{x:Bind SalePrice}" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="4" Text="{x:Bind Stock}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="{x:Bind Description}" TextTrimming="CharacterEllipsis" Opacity="0.7"/>
                        <TextBlock Grid.Column="6" Text="{x:Bind CategoryId}" TextTrimming="CharacterEllipsis"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ProgressBar Grid.Row="2" IsIndeterminate="True" Visibility="{x:Bind IsLoading, Mode=OneWay}" />
    </Grid>
</UserControl>
