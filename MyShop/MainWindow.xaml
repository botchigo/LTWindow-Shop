<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MyShop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MyShop - Login">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Welcome Section with Gradient Background -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F5A962" Offset="0.0"/>
                    <GradientStop Color="#9B6DD6" Offset="0.4"/>
                    <GradientStop Color="#7B5CD6" Offset="0.7"/>
                    <GradientStop Color="#6B4CD6" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Decorative curved shape overlay -->
            <Canvas>
                <Ellipse Width="600" Height="600" Canvas.Left="-200" Canvas.Top="100">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#8B6DD6" Offset="0.0"/>
                            <GradientStop Color="#7B5CD6" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Ellipse Width="400" Height="400" Canvas.Left="150" Canvas.Top="-100">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#E8A060" Offset="0.0"/>
                            <GradientStop Color="#C88B70" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Canvas>

            <!-- Logo -->
            <TextBlock Text="▲" FontSize="32" Foreground="White" 
                       Margin="40,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                       FontWeight="Bold"/>

            <!-- Welcome Text -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0">
                <TextBlock Text="Welcome" FontSize="52" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="Back!" FontSize="52" Foreground="White" FontWeight="Bold" Margin="0,-10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Right Panel - Login Form with ScrollViewer for responsiveness -->
        <ScrollViewer Grid.Column="1" 
                      Background="White" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Padding="60" MinHeight="500">
                <StackPanel VerticalAlignment="Center" MaxWidth="350" HorizontalAlignment="Center">

                    <!-- Login Title -->
                    <TextBlock Text="Login" FontSize="36" FontWeight="Bold" 
                               Foreground="#1A1A2E" Margin="0,0,0,10"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Welcome back! Please login to your account." 
                               FontSize="14" Foreground="#888888" Margin="0,0,0,30"
                               TextWrapping="Wrap"/>

                    <!-- User Name Label -->
                    <TextBlock Text="User Name" FontSize="13" Foreground="#555555" Margin="0,0,0,8"/>

                    <!-- User Name Input -->
                    <TextBox x:Name="UsernameTextBox" 
                             PlaceholderText="username@gmail.com"
                             Background="White"
                             Foreground="Black"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"
                             CornerRadius="4"
                             Margin="0,0,0,20"
                             FontSize="14"
                             Height="40"
                             Padding="12,8"/>

                    <!-- Password Label -->
                    <TextBlock Text="Password" FontSize="13" Foreground="#555555" Margin="0,0,0,8"/>

                    <!-- Password Input -->
                    <PasswordBox x:Name="PasswordTextBox"
                                 PlaceholderText="••••••••••"
                                 Background="White"
                                 Foreground="Black"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 CornerRadius="4"
                                 Margin="0,0,0,15"
                                 FontSize="14"
                                 Height="40"
                                 Padding="12,8"/>

                    <!-- Remember Me and Forgot Password Row -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="RememberMeCheckBox" Content="Remember Me" 
                                  Grid.Column="0" Foreground="#555555" FontSize="13"/>

                        <HyperlinkButton Content="Forgot Password?" Grid.Column="1"
                                         Foreground="#888888" FontSize="13" Padding="0"/>
                    </Grid>

                    <!-- Login Button -->
                    <Button x:Name="LoginButton" Content="Login" 
                            HorizontalAlignment="Stretch"
                            Height="45"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            CornerRadius="8"
                            Margin="0,0,0,25"
                            Click="LoginButton_Click">
                        <Button.Background>
                            <SolidColorBrush Color="#7B5CD6"/>
                        </Button.Background>
                    </Button>

                    <!-- Sign Up Link -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="New User? " FontSize="14" Foreground="#888888"
                                   VerticalAlignment="Center"/>
                        <HyperlinkButton Content="Signup" Foreground="#7B5CD6" 
                                         FontSize="14" Padding="0"
                                         Click="SignupButton_Click"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>